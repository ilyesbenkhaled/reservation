{% extends 'base.html.twig' %}

{% block title %}Pax list{% endblock %}

{% block body %}

  <section id="container" class="">
      <!--header start-->
      {% include ('reservation/header.html.twig') %}

      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Table</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                        <li><i class="fa fa-table"></i>Table</li>
                        <li><i class="fa fa-th-list"></i>Basic Table</li>
                    </ol>
                </div>
            </div>
              <!-- page start-->
           
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Advanced Table
                          </header>
                          
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                              <tr>
                                 <th><i class="icon_profile"></i> FirstName</th>
                                 <th><i class="icon_profile"></i> LastName</th>
                                 <th><i class="icon_mail_alt"></i> Cin</th>
                                 <th><i class="icon_pin_alt"></i> Child</th>
                                 <th><i class="icon_mobile"></i>Phone</th>
                                 <th><i class="icon_profile"></i>Sex</th>
                                 <th><i class="icon_pin_alt"></i> Room Number</th>
                                 <th><i class="icon_cogs"></i> Action</th>
                              </tr>
                              {% for pax in paxes %}
                              <tr>
                                 <td>{{ pax.nom }}</td>
                                 <td>{{ pax.prenom }}</td>
                                 <td>{{ pax.cin }}</td>
                                 <td>{{ pax.nombreDeEnfant }}</td>
                                 <td>{{ pax.phone }}</td>
                                 <td> {{ pax.sex }}</td>
                                         {% for room in rooms %}
                                          <td>{{ room.numero }}</td>  
                                         {% endfor %}
                                 <td>
                                  <div class="btn-group">
                                      <a class="btn btn-primary" href="{{ path('reservationedit', {'id': pax.id}) }}"><i class="icon_plus_alt2"></i></a>
                                      <a class="btn btn-danger" href="{{ path('reservationpax_delete', {'id': pax.id}) }}"><i class="icon_close_alt2"></i></a>
                                  </div>
                                  </td>
                              </tr>
                              {% endfor %}             
                           </tbody>
                        </table>
                      </section>
                  </div>
              </div>
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->
      <div class="text-right">
            <div class="credits">
